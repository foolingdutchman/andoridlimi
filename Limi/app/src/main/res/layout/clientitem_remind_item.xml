<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/client_item_padding">
    <TextView
        android:id="@+id/tv_client_remark"
        android:layout_margin="@dimen/common_item_small_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天"/>
    <LinearLayout

        android:gravity="center_vertical"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_client_icon"
            android:layout_width="@dimen/ic_clients_width"
            android:layout_height="@dimen/ic_clients_width"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            />
        <LinearLayout
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginBottom="@dimen/common_item_small_padding"
                android:ellipsize="none"
                android:maxEms="8"
                android:singleLine="true"
                android:id="@+id/tv_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_size_normal"
                android:text="张三"/>
            <TextView
                android:id="@+id/tv_client_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tag_yellow"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="A类"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_small"
                />
        </LinearLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <RelativeLayout
            android:id="@+id/rl_call"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_call"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_client_call"/>
        </RelativeLayout>
        <ImageView
            android:background="@mipmap/ic_home_headline_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"/>

    </LinearLayout>


</LinearLayout>