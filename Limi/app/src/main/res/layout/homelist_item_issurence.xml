<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="afterDescendants"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_item_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_item_padding_Left"
        android:text="@string/home_trust_recommed"
        android:textColor="@color/color_black66"
        android:textSize="@dimen/font_size_normal"
        android:visibility="gone"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_item_small_padding"
                    android:layout_marginLeft="@dimen/common_item_padding_Left"
                    android:layout_marginRight="@dimen/common_item_padding_Left"
                    android:layout_marginTop="@dimen/common_item_small_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_home_security_item_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_size_medium"/>

                    <TextView
                        android:id="@+id/home_trust_tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_margin="@dimen/common_item_small_padding"
                        android:background="@drawable/shape_tag_yellow"
                        android:text=""
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_size_small"
                        android:visibility="invisible"/>

                    <TextView
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:id="@+id/home_trust_tag2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/shape_tag_red"
                        android:text=""
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_size_small"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/iv_security_item_icon"
                        android:layout_width="56dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="@dimen/trust_item_padding_Left"
                        android:layout_marginRight="@dimen/common_item_small_padding"/>


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dev_common_bottom_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_item_small_padding"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/common_item_small_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_home_Security_min_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/font_size_small"/>

                        <TextView
                            android:id="@+id/tv_home_Security_period"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/font_size_small"/>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@mipmap/dev_home_hotitem"/>

                    <TextView
                        android:id="@+id/tv_home_security_item_charge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_size_medium"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dev_common_bottom_line"/>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_home_item_sucurity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

