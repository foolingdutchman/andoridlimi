<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/common_header"/>
<TextView
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="您的身份是:"/>
    <ImageView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/dev_common_bottom_line"/>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_s1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_s1_item1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:checked="true"
                android:padding="@dimen/search_item_padding"
                android:text="独立理财师"
                android:textColor="@drawable/main_title_selector" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@mipmap/dev_common_bottom_line" />

            <RadioButton
                android:id="@+id/rb_s1_item2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:checked="false"
                android:padding="@dimen/search_item_padding"
                android:text="三方理财师" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@mipmap/dev_common_bottom_line" />

            <RadioButton
                android:id="@+id/rb_s1_item3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:checked="false"
                android:padding="@dimen/search_item_padding"
                android:text="银行理财师" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@mipmap/dev_common_bottom_line" />

            <RadioButton
                android:id="@+id/rb_s1_ite4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:checked="false"
                android:padding="@dimen/search_item_padding"
                android:text="保险理财师" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@mipmap/dev_common_bottom_line" />

            <RadioButton
                android:id="@+id/rb_s1_item5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:checked="false"
                android:padding="@dimen/search_item_padding"
                android:text="信托理财师" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@mipmap/dev_common_bottom_line" />

            <RadioButton
                android:id="@+id/rb_s1_item6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:checked="false"
                android:padding="@dimen/search_item_padding"
                android:text="证券理财师" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@mipmap/dev_common_bottom_line" />

            <RadioButton
                android:id="@+id/rb_s1_item7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:checked="false"
                android:padding="@dimen/search_item_padding"
                android:text="其他行业理财师" />  <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@mipmap/dev_common_bottom_line" />

            <RadioButton
                android:id="@+id/rb_s1_item8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:checked="false"
                android:padding="@dimen/search_item_padding"
                android:text="我不是理财师" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>