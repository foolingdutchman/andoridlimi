<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/pop_client_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_selection1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    android:background="@drawable/myclient_tab_selecor"
                    android:paddingBottom="@dimen/search_item_padding"
                    android:paddingLeft="26dp"
                    android:paddingTop="@dimen/search_item_padding"
                    android:text="客户状态"
                    android:textColor="@drawable/main_title_selector" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/dev_common_bottom_line" />

                <TextView
                    android:id="@+id/tv_selection2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/myclient_tab_selecor"
                    android:paddingBottom="@dimen/search_item_padding"
                    android:paddingLeft="26dp"
                    android:paddingTop="@dimen/search_item_padding"
                    android:text="客户分类"
                    android:textColor="@drawable/main_title_selector" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/dev_common_bottom_line" />

                <TextView
                    android:id="@+id/tv_selection3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/myclient_tab_selecor"
                    android:paddingBottom="@dimen/search_item_padding"
                    android:paddingLeft="26dp"
                    android:paddingTop="@dimen/search_item_padding"
                    android:text="客户标签"
                    android:textColor="@drawable/main_title_selector" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/dev_common_bottom_line" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <FrameLayout
                    android:id="@+id/frame1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/rg_s1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
                                android:id="@+id/rb_s1_item1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/common_item_small_padding"
                                android:checked="true"
                                android:padding="@dimen/search_item_padding"
                                android:text="不限"
                                android:textColor="@drawable/main_title_selector" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:background="@mipmap/dev_common_bottom_line" />

                            <RadioButton
                                android:id="@+id/rb_s1_item2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/common_item_small_padding"
                                android:checked="false"
                                android:padding="@dimen/search_item_padding"
                                android:text="已签单" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:background="@mipmap/dev_common_bottom_line" />

                            <RadioButton
                                android:id="@+id/rb_s1_item3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/common_item_small_padding"
                                android:checked="false"
                                android:padding="@dimen/search_item_padding"
                                android:text="未签单" />
                        </RadioGroup>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RadioGroup
                                android:id="@+id/rg_s2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RadioButton
                                    android:id="@+id/rb_s2_item1"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:checked="true"
                                    android:padding="@dimen/search_item_padding"
                                    android:text="不限"
                                    android:textColor="@drawable/main_title_selector" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    android:background="@mipmap/dev_common_bottom_line" />

                                <RadioButton
                                    android:id="@+id/rb_s2_item2"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:checked="false"
                                    android:padding="@dimen/search_item_padding"
                                    android:text="A" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    android:background="@mipmap/dev_common_bottom_line" />

                                <RadioButton
                                    android:id="@+id/rb_s2_item3"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:checked="false"
                                    android:padding="@dimen/search_item_padding"
                                    android:text="B" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    android:background="@mipmap/dev_common_bottom_line" />

                                <RadioButton
                                    android:id="@+id/rb_s2_item4"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:checked="false"
                                    android:padding="@dimen/search_item_padding"
                                    android:text="C" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    android:background="@mipmap/dev_common_bottom_line" />

                                <RadioButton
                                    android:id="@+id/rb_s2_item5"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:checked="false"
                                    android:padding="@dimen/search_item_padding"
                                    android:text="D" />
                            </RadioGroup>
                        </LinearLayout>
                    </ScrollView>
                </FrameLayout>


                <ScrollView
                    android:fillViewport="true"
                    android:id="@+id/scv_tag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">


                        <com.limi88.financialplanner.ui.widget.MyFloatLayoutView
                            android:focusable="false"
                            android:id="@+id/mfv_tags"
                            android:layout_margin="@dimen/common_item_small_padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                </ScrollView>


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/dev_common_bottom_line" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:text="取消" />

            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:text="清除选择" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:text="确定" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>