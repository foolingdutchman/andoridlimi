<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_login_v2"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">
<ImageView
    android:id="@+id/iv_wx_bind"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="194dp"
    android:src="@mipmap/ic_wx_bind"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_wx_bind"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_wx_bind"
        android:text="绑定微信，以更好体验理米"
        android:textSize="16sp"
        android:textColor="@color/color_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_wx_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/wx_bind_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/shape_login_button_selected"
            android:text="授权"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_normal"/>
    </LinearLayout>
    <TextView

        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:text=""
        android:id="@+id/tv_skip"
        android:textSize="14sp"
        android:textColor="@color/color_white60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>